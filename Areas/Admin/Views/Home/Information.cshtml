
@{
    ViewBag.Title = "Information";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage1.cshtml";
}

<div class="text">Information</div>
<div class="container">
    <form action="/Admin/Home/Information" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="" hidden></label>
                    <input type="text" class="form-control" value="@Model.ID_customer" hidden name="id_customer">
                </div>
                <div class="form-group">
                    <label for="">Username</label>
                    <input type="text" class="form-control" value="@Model.Username" name="username" readonly>
                </div>
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" value="@Model.Name" name="name">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="text" class="form-control" value="@Model.Email" name="email">
                </div>
                <div class="form-group">
                    <label for="">Phone</label>
                    <input type="text" class="form-control" value="@Model.Phone" name="phone">
                </div>
                <div class="form-group">
                    <label for="">Birthday</label>
                    <input type="text" class="form-control" value="@Model.Birthday" name="birthday">
                </div>
                <div class="form-group">
                    <label for="">Address</label>
                    <input type="text" class="form-control" value="@Model.Address" name="address">
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/Images/Admin/@Model.Avatar" id="image" class="img-user-edit">
                <input type="file" id="imageFiles" onchange="chooseFile(this)" name="imageFiles" class="input-avt" accept=".jpg, .jpeg, .gif, .png" />
                <p class="note-avt">Accept file .JPG, .JPEG, .PNG</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mt-3">
                <input type="submit" class="btn btn-primary btn-user-edit" value="Save" />
            </div>
        </div>
    </form>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>
