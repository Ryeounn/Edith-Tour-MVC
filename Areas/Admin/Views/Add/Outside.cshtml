<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="title-add mt-5">Create Tour Outside</p>
        </div>
    </div>
    <form action="/Product/Inside" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="">Tour Code</label>
                    <input type="text" class="form-control" name="tour_code" />
                </div>
                <div class="form-group">
                    <label class="">Name</label>
                    <input type="text" class="form-control" name="name" />
                </div>
                <div class="form-group">
                    <label class="">Place</label>
                    <input type="text" class="form-control" name="place" />
                </div>
                <div class="form-group">
                    <label class="">Departure</label>
                    <input type="text" class="form-control" name="place_leave" />
                </div>
                <div class="form-group">
                    <label class="">Arrival</label>
                    <input type="text" class="form-control" name="place_go" />
                </div>
                <div class="form-group">
                    <label class="">Description</label>
                    <input type="text" class="form-control" name="description" />
                </div>
                <div class="form-group">
                    <label class="">Image</label>
                    <input type="file" class="form-control" name="imageFile" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="">Time Go</label>
                    <input type="text" class="form-control" name="time_go" />
                </div>
                <div class="form-group">
                    <label class="">Time Leave</label>
                    <input type="text" class="form-control" name="time_leave" />
                </div>
                <div class="form-group">
                    <label class="">NumberofTour</label>
                    <input type="text" class="form-control" name="numberoftour" />
                </div>
                <div class="form-group">
                    <label class="">Day Go</label>
                    <input type="date" class="form-control" name="day_leave" />
                </div>
                <div class="form-group">
                    <label class="">Day Leave</label>
                    <input type="date" class="form-control" name="day_go" />
                </div>
                <div class="form-group">
                    <label class="">Note</label>
                    <input type="text" class="form-control" name="note" />
                </div>
                <div class="form-group">
                    <label class="">Visa</label>
                    <input type="text" class="form-control" name="visa_support" />
                </div>
            </div>
            <div class="col-md-12">
                <input type="text" value="Create" class="btn btn-primary mt-3 btn-inside-create" />
            </div>
        </div>
    </form>
</div>